<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_6sdp"
    android:layout_marginTop="@dimen/_2sdp"
    android:layout_marginEnd="@dimen/_6sdp"
    android:layout_marginBottom="@dimen/_6sdp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:orientation="horizontal">

        <com.app.riststock.spichalViews.STextViewBold
            style="@style/textViewStyle"
            android:id="@+id/staticNameTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/round_corner_fill_gray_stroke_gray"
            android:gravity="center_vertical"
            android:padding="@dimen/_8sdp"
            android:drawablePadding="@dimen/_8sdp"
            android:drawableStart="@drawable/ic_statics_line"
            android:text="@string/listed_products_number"
            android:textColor="@color/colorPrimaryDark"
            android:visibility="visible" />

        <com.app.riststock.spichalViews.STextViewBold
            android:id="@+id/staticCountTv"
            style="@style/textViewStyleWhite"
            android:layout_width="wrap_content"
            android:minWidth="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_8sdp"
            android:background="@drawable/round_corner_fill_blue_stroke_primary"
            android:gravity="center"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="5"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>
